@model University.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Degree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HireDate)
        </dd>

        <!-- Dodavame courses vo Delete/Details/Index on -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstCourses)
        </dt>

        <dd class="col-sm-10">
            @if (Model.FirstCourses != null)
            {
                @foreach (var course in Model.FirstCourses)
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.FirstCourses">@Html.DisplayFor(model => course.Title)</a> <br />

                }

            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondCourses)
        </dt>

        <dd class="col-sm-10">
            @if (Model.SecondCourses != null)
            {
                @foreach (var course in Model.SecondCourses)
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.SecondCourses">@Html.DisplayFor(model => course.Title)</a> <br />

                }

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
