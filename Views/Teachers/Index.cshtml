            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Teachers.FirstOrDefault().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers.FirstOrDefault().Degree)
            </th>
            <th>
