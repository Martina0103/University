        <option value="">All</option>
    </select>
    Degree: <select asp-for="TeacherDegree" asp-items="Model.Degrees">
        <option value="">All</option>
    </select>
    Full Name: <input type="text" asp-for="SearchList" />
    @*Last Name: <input type="text" asp-for="SearchLast" />*@
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Teachers.FirstOrDefault().FirstName)
