                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>*@

            <!-- Dodavame courses vo Delete/Details/Index on -->
            <td>
                @if (item.FirstCourses != null)
                {
                    @foreach (var course in item.FirstCourses)
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"> @course.Title </a> <br /> <!-- raboti   -->
                    }
                }
            </td>
            <!-- Dodavame courses vo Delete/Details/Index on -->
            <td>
                @if (item.SecondCourses != null)
                {
                    @foreach (var course in item.SecondCourses)
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"> @course.Title </a> <br /> <!-- Dali kje raboti so  course.Title  -->
                    }
                }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
